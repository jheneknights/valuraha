//Content in the middle of the app
div.main-content

	//The page header
	div.breadcrumbs#breadcrumbs.breadcrumbs-fixed
		ul.breadcrumb
			li
				i.icon-home.home-icon
				a(href="") Home
			li.active Dashboard

	div.page-content
		div.vspace-20.hidden-xs.hidden-sm

		//All the contest will be listed here, with the active one on the button
		div.btn-group.pull-right
			button.btn.btn-warning.btn-md Big League Contest
			button.btn.btn-warning.btn-md.dropdown-toggle(data-toggle="dropdown")
				span.icon-caret-down.icon-only.bigger-75
				span.sr-only Toggle dropdown
			ul.dropdown-menu.dropdown-yellow.dropdown-warning(role="menu")
				li: a(href="#") Another Contest
				li.divider
				li: a(href="#") Another Contest
				li.divider
				li: a(href="#") Another Contest

		div.page-header
			h1.orange Dashboard
				small: i.icon-double-angle-right
					|  Overview & Stats

			

		//- All relevant content starts here (for user)
		div.row
			//Main Dashboard stuff
			div.col-sm-9

				div.row
					// Trading dashboard centralised
					div.col-xs-12(role="user relevant trading data")
						//Trading dashboard
						div.tabbable.tabs.left
							ul.nav.nav-tabs.tab-color-blue.padding-10.background-blue.orange#myTabs
								li.active: a(data-toggle="tab", href="#shares") 
									i.red.icon-asterisk.bigger-75
									|  Shares
								li: a(data-toggle="tab", href="#bonds") 
									i.green.icon-circle.bigger-75 
									|  Bonds
								li: a(data-toggle="tab", href="#loans")
									i.blue.icon-money.bigger-75
									|  Loans
								li: a(data-toggle="tab", href="#deposits")
									i.black.icon-download.bigger-75
									|  Fixed Deposits

							div.tab-content
								div#shares.tab-pane.in.active
									// Table for the shares bought
									table.table.table-bordered.table-striped.table-hover
										thead: tr.warning
											th Stock
											th Shares Owned
											th.hidden-480 Weighed-in 
											th Market Price
											th Change(%)
											th Options

										tbody
										- for(x=0;x<5;x++) {
											tr
												td Loren Ipsum
												td: span.label.label-light 50000
												td.hidden-480 5.15
												td 9.65
												td: span.badge.badge-success 4.5
												td
													//- For medium to large screens
													div.visible-md.visible-lg.hidden-sm.hidden-xs.btn-group
														button.btn.btn-success.btn-xs(data-rel="tooltip", data-toggle="tooltip", data-trigger="hover", data-placement="top", data-original-title="Buy more", title="Buy more" )
															i.icon-ok.bigger-120
														button.btn.btn-warning.btn-xs(data-rel="tooltip", data-toggle="tooltip", data-trigger="hover", data-placement="top", data-original-title="Sell", title="Sell")
															i.icon-trash.bigger-120
														button.btn.btn-info.btn-xs(data-rel="tooltip", data-toggle="tooltip", data-trigger="hover", data-placement="top", data-original-title="Info", title="Info")
															i.icon-info-sign.bigger-120

													//- For smaller screens: Mobile
													div.visible-xs.visible-sm.hidden-md.hidden-lg
														div.inline.position-relative
															button.btn.btn-minier.btn-primary.dropdown-toggle(data-toggle="dropdown")
																i.icon-cog.icon-only.bigger-120
															ul.dropdown-menu.dropdown-only-icon.dropdown-yellow.pull-right.dropdown-caret.dropdown-close
																li: a.tooltip-warning(data-rel="tooltip", data-toggle="tooltip", data-trigger="hover", data-placement="top", data-original-title="Buy more", title="Buy more", href="#")
																	span.green: i.icon-ok.bigger-120
																li: a.tooltip-warning(data-rel="tooltip", data-toggle="tooltip", data-trigger="hover", data-placement="top", data-original-title="Sell", title="Sell", href="#")
																	span.red: i.icon-trash.bigger-120
																li: a.tooltip-warning(data-rel="tooltip", data-toggle="tooltip", data-trigger="hover", data-placement="top", data-original-title="Info", title="Info", href="#")
																	span.blue: i.icon-info-sign.bigger-120
										- }
								div#bonds.tab-pane
									//A jumbotron used when no data is available to display related to the user
									div.jumbotron
										h2 Buy Bonds
										p.grey You dont have any bonds yet.
										p: a.btn.btn-warning.btn-lg(role="button") Buy Bonds
								div#loans.tab-pane
									div.jumbotron
										h2 Get a loan
										p.grey You haven't borrowed any money yet to happily invest.
										p: a.btn.btn-warning.btn-lg(role="button") Get Loan
								div#deposits.tab-pane
									div.jumbotron
										h2 Fixed Deposits
										p.grey You have no money saved up yet.
										p: a.btn.btn-warning.btn-lg(role="button") Make Deposit

						//- Divider
						div.hr.hr32.hr-dotted.vspace-20

					//Contest Portfolio - User analytical data
					div.col-sm-12(role="user specific analytical data")
						div.widget-box.light-border#activity-tabs
							div.widget-header.widget-header-flat.header-color-orange
								h4.smaller
									i.icon-info-sign.bigger-120
									| Contest Portfolio
								div.widget-toolbar
									ul.nav.nav-tabs.tab-color-blue#activty-tabs
										li.active: a(data-toggle="tab", href="#recent-activities")
											i.icon-time
											|  Recent activities
										li: a(data-toggle="tab", href="#holdings") 
											i.icon-circle
											|  Holdings
										li: a(data-toggle="tab", href="#performance")
											i.icon-eye-open
											|  Preformance
							div.widget-body
								div.widget-main.padding-10
									div.tab-content.no-padding
										div.tab-pane.active#recent-activities
											//adding a scroll-bar to condense the data
											div.slim-scroll(data-height="300")
												div.profile-feed#recent-activities-feed

													//The Recent activities listed here
													- for(x=0;x<10;x++) {
													div.profile-activity.clearfix.padding-10
														div(style="padding-right: 0.45em")
															i.pull-left.thumbicon.icon-money.btn-success.no-hover
															span.label.label-success.pull-right Settled
															p.statement.large
																| You 
																span.label.label-info sold 
																strong.label.label-light.bold 50000 
																span.text-info  Safaricom
																|  shares for Ksh.
																span.text-info  1,568,000
															
															div.time
																i.icon-time.bigger-32
																|  2 days ago
													- }
										div.tab-pane#holdings
											| Holdings chart
										div.tab-pane#performance
											| Portfolio chart

						div.hr.hr32.hr-dotted.vspace-20

						div.row
							//Comments
							div.col-xs-12(role="conversations")
								div.widget-box#transparent.light-border
									div.widget-header.header-color-orange.widget-header-flat
										h4.smaller
											i.icon-comments
											| Conversation
									
									div.widget-body
										div.widget-main.no-padding
											div.slim-scroll(data-height="300")
												div.dialogs

													//The comments
													- for(x=0;x<10;x++) {
													div.itemdiv.dialogdiv
														div.user: img(alt="image", src='/assets/avatars/avatar1.png')
														div.body
															div.time
																i.icon-time
																span.grey  12 mins ago
															div.name: a Jhene Knights
															div.text
																| Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque commodo massa sed ipsum porttitor facilisis.
															
															div.btn-group
																button(type="button").btn.btn-minier.btn-info Like
																button(type="button").btn-btn-minier.btn-success Reply

															//
																div.tools
																a.btn.btn-minier.btn-info(data-rel="tooltip", title, data-original-title="Reply")
																	i.icon-only.icon-share-alt
													- }

											//The user can add a comment
											form.no-padding
												div.form-actions
													div.input-group
														input(placeholder="Type in your two cents here", type="text", name="message").form-control
														span.input-group-btn
															button.btn.btn-sm.btn-info.no-radius(type="button")
																i.icon-share-alt
																| Comment
			// Stock updates ticker
			div.col-sm-3.hidden-xs
				div.widget-box#transparent.light-border
					div.widget-header.header-color-orange.widget-header-flat
						h4.smaller
							i.icon-time
							| NSE Updates
					div.widget-body
						div.widget-main.padding-4
							div.slim-scroll(data-height="300")
								div.profile-feed#nse-stocks-feeds

									// The updates populated here
									- for(x=0;x<12;x++) {
									div.profile-activity.clearfix
										div(style="padding-right: 0.45em")
											i.pull-left.thumbicon.icon-arrow-down.btn-danger.no-hover
											a.user.grey The Company
											span.label.label-danger.arrowed.pull-right.margin-10 #{x+3/2}
											div.time
												i.icon-time.bigger-32
												|  16 min ago

									- }
				div.hr.hr20.hr-dotted

				//Headlines will fall here
				div.widget-box#transparent.light-border
					div.widget-header.header-color-orange.widget-header-flat
						h4.smaller
							i.icon-comments
							| Headlines
					div.widget-body
						div.widget-main.padding-4
							div.slim-scroll(data-height="400")
								div.dialogs
									- for(x=0;x<10;x++) {
									div.profile-activity.clearfix
										div(style="padding-right: 0.45em")
											a.user.grey(target="_blank", href="http://app.prittynote.com") Lorem ipsum dolor sit amet, consectetur adipiscing elit.
											div.time
												i.icon-time.bigger-32
													|  an hour ago
									- }
